    <script>
        // Simple in-browser quiz logic (Frontend)
        let questions = [];
        let currentQuestionIndex = 0;
        let score = 0;

        const startBtn = document.getElementById('startBtn');
        const quizContainer = document.getElementById('quizContainer');
        const questionContainer = document.getElementById('questionContainer');
        const nextBtn = document.getElementById('nextBtn');
        const scoreDiv = document.getElementById('score');

        document.getElementById('browseBtn').addEventListener('click', () => {
            alert('Browse feature coming soon!');
        });

        startBtn.addEventListener('click', startQuiz);

        async function startQuiz() {
            document.querySelector('.main-content').style.display = 'none';
            quizContainer.style.display = 'block';
            try {
                const response = await fetch('http://localhost:3000/api/questions');
                questions = await response.json();
                if (questions.length === 0) {
                    questionContainer.innerHTML = '<p>No questions available.</p>';
                    return;
                }
                showQuestion();
            } catch (error) {
                questionContainer.innerHTML = '<p>Error fetching questions.</p>';
            }
        }

        function showQuestion() {
            const q = questions[currentQuestionIndex];
            const options = [...q.incorrect_answers, q.correct_answer].sort(() => Math.random() - 0.5);
            questionContainer.innerHTML = `
                <div class="question">
                    <h2>${q.question}</h2>
                    <div class="options">
                        ${options.map(opt => `<div class="option" onclick="selectOption(this, '${opt}', '${q.correct_answer}')">${opt}</div>`).join('')}
                    </div>
                </div>
            `;
            nextBtn.style.display = 'none';
        }

        function selectOption(element, selected, correct) {
            const options = document.querySelectorAll('.option');
            options.forEach(opt => {
                opt.onclick = null;
                if (opt.innerText === correct) opt.classList.add('correct');
                if (opt.innerText === selected && selected !== correct) opt.classList.add('incorrect');
            });
            if (selected === correct) score++;
            nextBtn.style.display = 'block';
            nextBtn.onclick = () => {
                currentQuestionIndex++;
                if (currentQuestionIndex < questions.length) {
                    showQuestion();
                } else {
                    endQuiz();
                }
            };
        }

        function endQuiz() {
            questionContainer.innerHTML = '<h2>Quiz Completed!</h2>';
            scoreDiv.innerHTML = `Your score: ${score} / ${questions.length}`;
            nextBtn.style.display = 'none';
        }
    </script>
</body>
